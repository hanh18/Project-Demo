<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./template/head.ejs') %>
    <title>Đăng nhập</title>
    <link rel="stylesheet" href="stylesheets/login.css">
</head>
<body>
    <header>
        <div class="flex-container">
            <div id="img-logo">
                <img id="logo" src="https://salt.tikicdn.com/ts/upload/ae/f5/15/2228f38cf84d1b8451bb49e2c4537081.png" alt="">
            </div>
            <div id="label-login">Đăng nhập</div>
        </div>
    </header>

    <div class="login-body-container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-5">
                <div class="login-wrap p-4 p-md-5">
                    <h3>
                        Đăng nhập
                    </h3>
                    <div class="img-login">
                        <img id="image-person" src="images/account_icon.png" alt="">
                    </div>

                    <form action="login" class="login-form" method="POST">
                        
                        <div class="login-form-email">
                            <% if(errs) { %>
                                <% errs.forEach(function(err){ %>
                                    <div class="alert alert-danger" role="alert">
                                        <%- err %>
                                    </div>
                                <% }); %>
                            <% } %>
                            <input type="text" tabindex="1" class="login-email" id="email" name="email" placeholder="Nhập email..." required>
                        </div>
                        <div class="login-form-password">
                            <input type="password" tabindex="2" class="login-password" id="password" name="pass" placeholder="Nhập mật khẩu..." required>
                        </div>
                        <div class="login-form-remember-me-and-forgot-password">
                            <div class="login-remember-me">
                                    <label id="checkbox-wrap">
                                        <input type="checkbox">
                                        <span class="checkmark"></span>
                                        Ghi nhớ mật khẩu
                                    </label>
                            </div>
                            <div class="login-remember-me login-forgot-password">
                                <a href="https://www.google.com/">Quên mật khẩu ?</a>
                            </div>
                        </div>
                        <div class="button-login">
                            <button id="login" tabindex="3" type="submit" class="btn btn-primary rounded submit p-3 px-5">Đăng nhập</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
    </div>

    <%- include('./template/script.ejs')%>
</body>
</html>